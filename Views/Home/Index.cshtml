@model IEnumerable<BulutPastanesi.Models.Urun>

@{
    ViewData["Title"] = "Lezzet Dünyası";
    var kategoriler = ViewBag.Kategoriler as List<BulutPastanesi.Models.Kategori>;
}

<div class="text-center p-5 mb-4 rounded-3 shadow-sm" style="background-color: var(--ana-renk); border-bottom: 4px solid var(--gold-renk);">
    <h1 class="display-4 fw-bold" style="color:var(--gold-renk); font-family: 'Brush Script MT', cursive;">Bulut Pastanesi</h1>
    <p class="lead" style="color:var(--yazi-renk)">En taze malzemelerle hazırlanan mutluluk.</p>
</div>

<div class="container mb-5 text-center">
    <a href="/" class="btn btn-outline-dark rounded-pill m-1 px-4 @(Context.Request.Query["k"].Count == 0 ? "active" : "")">Tümü</a>

    @if (kategoriler != null)
    {
        @foreach (var kat in kategoriler)
        {
            <a href="/Home/Index?k=@kat.Id" class="btn btn-outline-warning rounded-pill m-1 px-4 text-dark border-2">@kat.Ad</a>
        }
    }
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var urun in Model)
    {
        <div class="col">
            <div class="card h-100 border-0 shadow-sm">
                <div style="height: 250px; width: 100%; background-color: #fff; display: flex; align-items: center; justify-content: center; overflow: hidden; padding: 10px; border-bottom: 1px solid #f0f0f0;">
                    <img src="@(string.IsNullOrEmpty(urun.ResimUrl) ? "https://placehold.co/600x400?text=Resim+Yok" : urun.ResimUrl)"
                         class="card-img-top"
                         style="object-fit: contain; max-height: 100%; max-width: 100%;"
                         alt="@urun.Ad">
                </div>
                <div class="card-body text-center" style="background-color: #fff;">
                    <span class="badge bg-warning text-dark mb-2">@urun.Kategori?.Ad</span>
                    <h5 class="card-title fw-bold" style="color:var(--yazi-renk)">@urun.Ad</h5>
                    <p class="card-text text-muted small">
                        @(urun.Aciklama != null && urun.Aciklama.Length > 100 ? urun.Aciklama.Substring(0, 100) + "..." : urun.Aciklama)
                    </p>
                    <h4 class="fw-bold my-3" style="color:var(--gold-renk)">@urun.Fiyat ₺</h4>
                </div>

                <div class="card-footer bg-white border-0 text-center pb-4">
                    <a href="https://wa.me/?text=Merhaba, @urun.Ad ürünü hakkında bilgi almak istiyorum."
                       target="_blank" class="btn btn-success rounded-pill px-4 d-inline-flex align-items-center gap-2">

                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-whatsapp" viewBox="0 0 16 16">
                            <path d="M13.601 2.326A7.854 7.854 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.933 7.933 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.898 7.898 0 0 0 13.6 2.326zM7.994 14.521a6.573 6.573 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.557 6.557 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592zm3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.729.729 0 0 0-.529.247c-.182.198-.691.677-.691 1.654 0 .977.71 1.916.81 2.049.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232z" />
                        </svg>
                        Sipariş Ver
                    </a>
                </div>
            </div>
        </div>
    }
</div>
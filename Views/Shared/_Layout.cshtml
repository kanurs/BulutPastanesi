@using Microsoft.AspNetCore.Http
@inject BulutPastanesi.Data.ApplicationDbContext _db
@{
    var ayar = _db.SiteAyarlari.FirstOrDefault();
    // Veri yoksa varsayılan telefon
    string tel = ayar?.Telefon ?? "905555555555";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BulutPastanesi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BulutPastanesi.styles.css" asp-append-version="true" />

    <style>
        /* SİHİRLİ DOKUNUŞ BURADA */
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Sayfa boyu en az ekran kadar olsun */
        }

        /* İçerik alanı: Ekranın kalan kısmını doldurur ve footer'ı iter */
        .content-wrapper {
            flex: 1;
        }

        footer {
            flex-shrink: 0; /* Footer küçülmesin */
            background-color: #f8f9fa;
            padding: 20px 0;
            width: 100%;
            border-top: 1px solid #dee2e6;
            margin-top: auto; /* Otomatik olarak en alta git */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BulutPastanesi</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Hakkımızda</a>
                        </li>

                        @if (Context.Session.GetString("Yonetici") != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-danger fw-bold" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                                    YÖNETİM PANELİ
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Kategoriler" asp-action="Index">Kategori Yönetimi</a></li>
                                    <li><a class="dropdown-item" asp-controller="Urunler" asp-action="Index">Ürün Yönetimi</a></li>
                                    <li><div class="dropdown-divider"></div></li>
                                    <li><a class="dropdown-item" asp-controller="SiteAyarlari" asp-action="Index">Firma Ayarları</a></li>
                                    <li><div class="dropdown-divider"></div></li>
                                    <li><a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">Çıkış Yap</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">🔒 Yönetici Girişi</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container content-wrapper pb-5">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <a href="https://wa.me/@tel" target="_blank"
       style="position:fixed; bottom:20px; right:20px; z-index:9999; background-color:#25D366; color:white; width: 60px; height: 60px; display: flex; align-items: center; justify-content: center; border-radius:50%; box-shadow: 0 4px 10px rgba(0,0,0,0.3); text-decoration:none;">
        <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" fill="currentColor" class="bi bi-whatsapp" viewBox="0 0 16 16">
            <path d="M13.601 2.326A7.854 7.854 0 0 0 7.994 0C3.627 0 .068 3.558.064 7.926c0 1.399.366 2.76 1.057 3.965L0 16l4.204-1.102a7.933 7.933 0 0 0 3.79.965h.004c4.368 0 7.926-3.558 7.93-7.93A7.898 7.898 0 0 0 13.6 2.326zM7.994 14.521a6.573 6.573 0 0 1-3.356-.92l-.24-.144-2.494.654.666-2.433-.156-.251a6.56 6.56 0 0 1-1.007-3.505c0-3.626 2.957-6.584 6.591-6.584a6.56 6.56 0 0 1 4.66 1.931 6.557 6.557 0 0 1 1.928 4.66c-.004 3.639-2.961 6.592-6.592 6.592zm3.615-4.934c-.197-.099-1.17-.578-1.353-.646-.182-.065-.315-.099-.445.099-.133.197-.513.646-.627.775-.114.133-.232.148-.43.05-.197-.1-.836-.308-1.592-.985-.59-.525-.985-1.175-1.103-1.372-.114-.198-.011-.304.088-.403.087-.088.197-.232.296-.346.1-.114.133-.198.198-.33.065-.134.034-.248-.015-.347-.05-.099-.445-1.076-.612-1.47-.16-.389-.323-.335-.445-.34-.114-.007-.247-.007-.38-.007a.729.729 0 0 0-.529.247c-.182.198-.691.677-.691 1.654 0 .977.71 1.916.81 2.049.098.133 1.394 2.132 3.383 2.992.47.205.84.326 1.129.418.475.152.904.129 1.246.08.38-.058 1.171-.48 1.338-.943.164-.464.164-.86.114-.943-.049-.084-.182-.133-.38-.232z"></path>
        </svg>
    </a>

    <footer class="text-center">
        <div class="container">
            <span class="text-muted">
                &copy; 2025 - <strong>BulutPastanesi</strong> &nbsp;|&nbsp;
                <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-dark">Hakkımızda</a>
            </span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>